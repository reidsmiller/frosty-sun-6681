<h1><%= @doctor.name %></h1>
<ul>
  <li>Speciality: <%= @doctor.specialty %></li>
  <li>University Attended: <%= @doctor.university %></li>
  <li>Employed At: <%= @doctor.hospital_name %></li>
</ul>
<h3>Patients:</h3>
<ul>
  <% @doctor.find_patients.each do |patient| %>
    <li id='patient_<%= patient.id %>'>
      <%= patient.name %>
      <%= render partial: 'delete_doctor_patient', locals: {
        doctor_patient: patient.find_doctor_patient(@doctor),
        doctor_id: @doctor.id
      } %>
    </li>
  <% end %>
</ul>